{
  "name": "avius",
  "version": "1.0.0",
  "description": "_**We’ve entered the era of JavaScript decision fatigue.**_<br><br>\r Every time we start a new project, we’re overwhelmed at the selection of build tools, testing frameworks, component libraries and more.<br>",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "nodemon --watch webpack.*.js --exec \"webpack-dev-server --config webpack.dev.js --progress --color\"",
    "build": "webpack --config webpack.prod.js",
    "lint:js": "eslint src/ webpack.*.js --cache",
    "lint:style": "stylelint src/assets/css/*.css",
    "localtunnel": "lt --local-host--port 8080 --subdomain eneardev",
    "share:localtunnel": "npm-run-all --parallel start localtunnel",
    "ngrok": "ngrok http -host-header=localhost 8080",
    "share:ngrok": "npm-run-all --parallel start ngrok",
    "test": "mocha --reporter progress tests/setup.js \"tests/**/*.test.js\"",
    "test:watch": "npm run test -- --watch",
    "deploy": "surge ./build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ricproenca/avius.git"
  },
  "keywords": [],
  "author": "Ricardo Proença",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ricproenca/avius/issues"
  },
  "homepage": "https://github.com/ricproenca/avius#readme",
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-latest": "^6.24.1",
    "babili-webpack-plugin": "0.0.11",
    "bootstrap-loader": "^2.0.0",
    "bootstrap-sass": "^3.3.7",
    "chai": "^3.5.0",
    "clean-webpack-plugin": "^0.1.16",
    "css-loader": "^0.28.0",
    "cssnano": "^3.10.0",
    "eslint": "^3.19.0",
    "eslint-loader": "^1.7.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "git-revision-webpack-plugin": "^2.4.1",
    "glob": "^7.1.1",
    "html-webpack-plugin": "^2.28.0",
    "jsdom": "^10.0.0",
    "mocha": "^3.3.0",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "optimize-css-assets-webpack-plugin": "^1.3.1",
    "postcss-loader": "^1.3.3",
    "purifycss-webpack": "^0.6.1",
    "resolve-url-loader": "^2.0.2",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.1",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "surge": "^0.19.0",
    "url-loader": "^0.5.8",
    "watch-ignore-webpack-plugin": "^1.0.0",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.3",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "font-awesome": "^4.7.0",
    "jquery": "^3.2.1",
    "moment": "^2.18.1"
  }
}
